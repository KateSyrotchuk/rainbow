{% extends 'AppBundle:site:base_site.html.twig' %}
    {% block header %}
        <header class="masthead">
            <div class="container">
                <div class="row">
                    <div class="col col-sm-6">
                        <h1><a href="#" title="scroll down for your viewing pleasure">BNW Template</a>

                            <p class="lead">2-column Layout + Theme for Bootstrap 3</p></h1>
                    </div>
                    <div class="col col-sm-6">
                        <div class="well pull-right">
                            <img src="{{ asset("images/logo/радуга 1 - копия.png") |imagine_filter('logo') }}">
                        </div>
                    </div>
                </div>
            </div>

            <div class="container">
                <div class="row">
                    <div class="col col-sm-12">

                        <div class="panel">
                            <div class="panel-body">

                                <!-- temporary form -->
                               {# <form class="form-inline" role="form">
                                    <div class="form-group">
                                        <label for="email">Type of estate</label>
                                        <input type="text" class="form-control" id="email" placeholder="Choose type">
                                    </div>
                                    <div class="form-group">
                                        <label for="pwd">Count of room:</label>
                                        <input type="text" class="form-control" id="pwd" placeholder="Enter number">
                                    </div>
                                    <div class="checkbox">
                                        <label><input type="checkbox"> Exclusive</label>
                                    </div>
                                    <button type="submit" class="btn btn-default">Search</button>
                                </form>#}
                                {{ render(controller("AppBundle:Site:search")) }}

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </header>
    {% endblock header %}
    {% block panel %}
        <div class="panel">
            {% for estate in estates %}
            <h2><a class="grey" href="{{ path('show_estate', { 'slug': estate.slug }) }}">{{ estate.title }}</a></h2>

            <div class="row">
                <div class="col col-sm-8">
                    {% if estate.files[0] is defined %}
                    <img src="{{ asset("#{estate.files[0].path}") }}" class="img-responsive">
                    {% endif %}
                </div>
                <div class="col col-sm-4">
                    {% if estate.files[1] is defined %}
                        <img src="{{ asset("#{estate.files[1].path}") }}" class="img-responsive">
                    {% endif %}
                    <hr>
                    <h4>{{ 'site.recommend'|trans }}</h4>
                    <hr>
                </div>
            </div>

            <h2>{{ 'site.summary'|trans }}:</h2>
            {{ estate.description }}
            <br><br>
                <a href="{{ path('show_estate', { 'slug': estate.slug }) }}"
                   class="btn btn-default">
                    {{ 'site.more'|trans }}
                </a>
            <hr>
            {% endfor %}
        </div>
    {% endblock panel %}



