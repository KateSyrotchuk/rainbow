{% extends 'AppBundle:admin:base_admin.html.twig' %}
{% block panel %}
    <h1>Комментарии</h1>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#">Неопубликованные</a></li>
        <li><a href="{{ path('admin_published_comments') }}">Опубликованные</a></li>
        <li><a href="{{ path('admin_all_comments') }}">Все</a></li>

    </ul>
    <table class="table table-striped">
    <thead>
    <tr>
        <th>Id</th>
        <th>Контент</th>
        <th>Создан</th>
        <th><i class="fa fa-cogs"></i>Действия</th>
    </tr>
    </thead>
    <tbody>
    {% for comment in pagination %}
    <tr>
        <td>{{ comment.id }}</td>
        <td>{{ comment.content }}</td>
        <td>{{ comment.createdAt|date('d.m.Y h:m:s') }}</td>
        <td>
            <div class="item-actions">
                <a href="{{ path('admin_enable_comment', {'id': comment.id }) }}" class="btn btn-sm btn-default">
                    Опубликовать </a>
                <a href="{{ path('admin_comment_show', {'id': comment.id }) }}" class="btn btn-sm btn-default">
                    Показать </a>
            </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock panel %}