{% extends 'AppBundle:admin:base_admin.html.twig' %}

{% block panel %}
    <div class="panel">
        {% for estate in pagination %}
            <h2><a class="grey" href="{{ path('show_estate', { 'slug': estate.slug }) }}">{{ estate.title }}</a></h2>
            <div class="row">
                <div class="col col-sm-8">
                    <img src="{{ asset("#{estate.files[0].path}") }}" class="img-responsive">
                </div>
                <div class="col col-sm-4">
                    <img src="{{ asset("#{estate.files[3].path}") }}" class="img-responsive">
                    <hr>
                </div>
            </div>
            <h2>Краткое описание</h2>
            {{ estate.description }}
            <br><br>
        {% endfor %}
    </div>
{% endblock panel %}
