{% extends 'AppBundle:admin:base_admin.html.twig' %}

{% block panel %}
    <h1>Добавить категорию</h1>
    <p>Эта форма позволяет добавлять новые категории, которые будут потомками выбраной родительской категории </p>
    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.parent) }}
        <input type="submit" value="Добавить" class="btn btn-default"/>
        <a href="{{ path('admin_categories') }}" class="btn btn-default">Назад к списку</a>
    {{ form_end(form) }}
{% endblock %}

