{% for link in links %}
    {% set ind = 0 %}
    {% if not link.__children %}
        <li><a href="#">{{ link.title }}</a>
    {% else %}
        <li><a href="#">{{ link.title }} <span class="fa arrow"></span></a>
    {% endif %}

    {% if link.__children %}
        <ul class="nav"  style="text-indent: {{ ind+20 }}px !important">
            {% include "AppBundle::includes/menu-links.html.twig" with {'links': link.__children} %}
        </ul>
        {% endif %}
        </li>
{% endfor %}